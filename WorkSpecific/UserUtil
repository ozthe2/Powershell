          2 { $description = "Misuse of Account" 
              $code = "MAC" }
          3 { $description = "Misuse of Internet"
              $code = "MIN" }
          4 { $description = "Non-Payment of Course Fees"
              $code = "NPC" }
          5 { $description = "Non-Payment of Other Fees"
              $code = "NPO" }
          default { $code= "OTH"}
        }

        $type = "Internet-Disabled"
        $value = "Add to Internet-Disabled"

